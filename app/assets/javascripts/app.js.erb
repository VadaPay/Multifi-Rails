angular.module('multifiApp', ['ui.router',
'templates',
'Devise',
'ui.bootstrap',
'placeholders.img',
'timer',
'ngFileUpload',
'vAccordion',
'ngSanitize',
'ngS3upload',
'720kb.socialshare'
])
.config(function(ngS3Config) {
  ngS3Config.theme = 'bootstrap3';
})
.config([
  '$stateProvider',
  '$urlRouterProvider',
  function($stateProvider, $urlRouterProvider){
    $stateProvider
    .state('index', {
      abstract: true,
      url: "/index",
      templateUrl: '<%= asset_path("_content.html") %>',
    })
    .state('index.home', {
      url: '/home',
      templateUrl: '<%= asset_path("_home.html") %>',
      controller: 'MainCtrl'
    })
    .state('index.redeem', {
      url: '/redeem',
      templateUrl: '<%= asset_path("_redeem.html") %>'
    })
    .state('index.offers',{
      url: '/offers',
      controller: 'offerCtrl',
      templateUrl: '<%= asset_path("_offers.html") %>'
    })
    .state('index.customers', {
      url: '/customers',
      controller: 'customersCtrl',
      templateUrl: '<%= asset_path("_customers.html") %>'
    })
    .state('index.addcustomer', {
      url: '/addcustomer',
      controller: 'addCustomerCtrl',
      templateUrl: '<%= asset_path("_addcustomer.html") %>'
    })
    .state('index.compose', {
      url: '/compose/{id:[0-9]+}',
      controller: 'composeOfferCtrl',
      templateUrl: '<%= asset_path("_composeoffer.html") %>'
    })
    .state('index.groups', {
      url: '/groups',
      templateUrl: '<%= asset_path("_groups.html") %>'
    })
    .state('index.sources', {
      url: '/sources',
      templateUrl: '<%= asset_path("_sources.html") %>'
    })
    .state('index.lists', {
      url: '/lists',
      templateUrl: '<%= asset_path("_lists.html") %>'
    })
    .state('index.insights', {
      url: '/insights',
      templateUrl: '<%= asset_path("_insights.html") %>'
    })
    .state('index.reports', {
      url: '/reports',
      templateUrl: '<%= asset_path("_reports.html") %>'
    })
    .state('login', {
      url: '/login',
      templateUrl: '<%= asset_path("_login.html") %>',
      controller: 'AuthCtrl'
    })
    .state('register', {
      url: '/register',
      templateUrl: '<%= asset_path("_register.html") %>',
      controller: 'AuthCtrl'
    })
    .state('offer',{
      url: '/offer/:id',
      controller: 'viewOfferCtrl',
      templateUrl: '<%= asset_path("_offer.html")%>'
    });

    $urlRouterProvider.otherwise('login');

  }])
